<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Zone de recherche -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/searchCountry_editText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:background="@drawable/edit_text_background"
            android:hint="@string/chercher_un_pays"
            android:inputType="text"
            android:padding="12dp"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/home_list_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="@string/valider"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <!-- Sélecteur de langue -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Choisir la langue"
        android:textSize="18sp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/radioGroupLangue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:checkedButton="@id/radioButtonFr"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioButtonFr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Français" />

        <RadioButton
            android:id="@+id/radioButtonEn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:text="English" />

        <RadioButton
            android:id="@+id/radioButtonEs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Espanol" />
    </RadioGroup>

</LinearLayout>
